<h1>Alpha Bloggers</h1>

<% if @users.empty? %>
  <h2>You have no users</h2>
<% else %>
 <table>
  <thead>
    <th>User name</th>
    <th>Profile pic</th>
    <th colspan="4">Actions</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= gravatar_for(user) %></td>
         <td>
          <%= link_to "View profile", user_path(user) %>
        </td>
        <% if logged_in? && user == current_user %>
          <td>
            <%= link_to "Delete", user_path(current_user), method: :delete, data: { confirm: "Are you sure? "} %>
            <%= link_to "Edit", edit_user_path(user)  %>
          </td>
        <% end %>
      </tr>
    <% end %> 
  </table>
<% end %>